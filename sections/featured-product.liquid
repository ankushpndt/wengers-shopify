                            <li class="list-payment__item">
                                {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                            </li>
                          {%- endfor -%}
                      </ul>
                    </div>
                  </div>
                {%- endif -%}

            {%- endcase -%}
          {%- endfor -%}
          <a {% if product == blank %} role="link" aria-disabled="true" {% else %} href="{{ product.url }}" {% endif %} class="link product__view-details animate-arrow">{{ 'products.product.view_full_details' | t }}</a> 
        </product-info>
      </div>
    </div>
    {% render 'product-media-modal', product: product %}
  </div>
</div>
